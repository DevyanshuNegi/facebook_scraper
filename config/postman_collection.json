{
    "info": {
        "name": "Facebook Scraper API - Microservices",
        "description": "Microservices-based Facebook scraper with BullMQ queue management",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "_postman_id": "facebook-scraper-microservices-v2",
        "version": "2.1.0"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "sheet_id",
            "value": "YOUR_GOOGLE_SHEET_ID",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/health",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "health"
                    ]
                },
                "description": "Check API health and view queue statistics (waiting, active, completed jobs)"
            },
            "response": []
        },
        {
            "name": "API Documentation",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        ""
                    ]
                },
                "description": "Get API documentation with available endpoints and services"
            },
            "response": []
        },
        {
            "name": "Start Queue-Based Scraping",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"sheetId\": \"{{sheet_id}}\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/start-queue",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "start-queue"
                    ]
                },
                "description": "Reads pending rows from Google Sheet and adds to scrape-queue"
            },
            "response": []
        },
        {
            "name": "Start with Manual URLs",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"sheetId\": \"{{sheet_id}}\",\n  \"urls\": [\n    \"https://facebook.com/zuck\",\n    \"https://facebook.com/billgates\"\n  ]\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/start-queue",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "start-queue"
                    ]
                },
                "description": "Manually specify URLs to scrape"
            },
            "response": []
        },
        {
            "name": "Start with Batch Size",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"sheetId\": \"{{sheet_id}}\",\n  \"batchSize\": 50\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/start-queue",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "start-queue"
                    ]
                },
                "description": "Limit number of rows to process"
            },
            "response": []
        },
        {
            "name": "Queue Stats",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/queue/stats",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "queue",
                        "stats"
                    ]
                },
                "description": "Get queue statistics: waiting, active, completed, failed, paused status"
            },
            "response": []
        },
        {
            "name": "Pause Queue",
            "request": {
                "method": "POST",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/queue/pause",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "queue",
                        "pause"
                    ]
                },
                "description": "Pause queue - stops processing new jobs. Running jobs will complete."
            },
            "response": []
        },
        {
            "name": "Resume Queue",
            "request": {
                "method": "POST",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/queue/resume",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "queue",
                        "resume"
                    ]
                },
                "description": "Resume paused queue"
            },
            "response": []
        },
        {
            "name": "Drain Queue (Remove Waiting)",
            "request": {
                "method": "POST",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/queue/drain",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "queue",
                        "drain"
                    ]
                },
                "description": "Remove all waiting jobs. Active jobs continue running."
            },
            "response": []
        },
        {
            "name": "Clean Queue (Remove Old)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"grace\": 3600000\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/queue/clean",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "queue",
                        "clean"
                    ]
                },
                "description": "Remove completed/failed jobs older than grace period (default 1 hour = 3600000ms)"
            },
            "response": []
        },
        {
            "name": "Obliterate Queue (DELETE ALL)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"confirm\": \"YES_DELETE_ALL\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/queue/obliterate",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "queue",
                        "obliterate"
                    ]
                },
                "description": "⚠️ DANGER: Removes ALL jobs from queue (waiting, active, completed, failed). Requires confirmation."
            },
            "response": []
        },
        {
            "name": "Bull Board - Queue Monitoring",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/admin/queues",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "admin",
                        "queues"
                    ]
                },
                "description": "Open Bull Board UI in browser to monitor queues visually"
            },
            "response": []
        }
    ]
}