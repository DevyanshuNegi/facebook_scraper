{
    "info": {
        "name": "Facebook Scraper API - Microservices",
        "description": "API collection for microservices-based Facebook scraper with BullMQ",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "_postman_id": "facebook-scraper-microservices",
        "version": "2.0.0"
    },
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/health",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "health"
                    ]
                },
                "description": "Check API server health and active jobs count"
            }
        },
        {
            "name": "Start Queue-Based Scraping (NEW)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"sheetId\": \"YOUR_GOOGLE_SHEET_ID\",\n  \"urls\": [\n    \"https://facebook.com/zuck\",\n    \"https://facebook.com/billgates\"\n  ]\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/start-queue",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "start-queue"
                    ]
                },
                "description": "Add URLs to scrape-queue for processing by Worker service. This is the recommended approach for microservices architecture."
            }
        },
        {
            "name": "Start Legacy Polling Job",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"sheetId\": \"YOUR_GOOGLE_SHEET_ID\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/start",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "start"
                    ]
                },
                "description": "Legacy endpoint using in-memory polling (backward compatible)"
            }
        },
        {
            "name": "Get Job Status",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/status/:jobId",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "status",
                        ":jobId"
                    ],
                    "variable": [
                        {
                            "key": "jobId",
                            "value": "your-job-id"
                        }
                    ]
                },
                "description": "Get status of a polling job (legacy endpoint)"
            }
        },
        {
            "name": "Stop Job",
            "request": {
                "method": "POST",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/stop/:jobId",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "stop",
                        ":jobId"
                    ],
                    "variable": [
                        {
                            "key": "jobId",
                            "value": "your-job-id"
                        }
                    ]
                },
                "description": "Stop a running polling job (legacy)"
            }
        },
        {
            "name": "List All Jobs",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/jobs",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "jobs"
                    ]
                },
                "description": "List all polling jobs (legacy)"
            }
        },
        {
            "name": "Bull Board - Queue Dashboard",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/admin/queues",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "admin",
                        "queues"
                    ]
                },
                "description": "Access Bull Board monitoring UI (open in browser)"
            }
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        }
    ]
}