{
    "info": {
        "name": "Facebook Scraper API - Microservices",
        "description": "Microservices-based Facebook scraper with BullMQ queue management",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "_postman_id": "facebook-scraper-microservices-v2",
        "version": "2.0.0"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "sheet_id",
            "value": "YOUR_GOOGLE_SHEET_ID",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/health",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "health"
                    ]
                },
                "description": "Check API health and view queue statistics (waiting, active, completed jobs)"
            },
            "response": []
        },
        {
            "name": "API Documentation",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        ""
                    ]
                },
                "description": "Get API documentation with available endpoints and services"
            },
            "response": []
        },
        {
            "name": "Start Queue-Based Scraping (Main Endpoint)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"sheetId\": \"{{sheet_id}}\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/start-queue",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "start-queue"
                    ]
                },
                "description": "Reads pending rows from Google Sheet and adds to scrape-queue. URLs parameter is optional - if not provided, automatically reads from sheet."
            },
            "response": []
        },
        {
            "name": "Start with Manual URLs",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"sheetId\": \"{{sheet_id}}\",\n  \"urls\": [\n    \"https://facebook.com/zuck\",\n    \"https://facebook.com/billgates\"\n  ]\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/start-queue",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "start-queue"
                    ]
                },
                "description": "Manually specify URLs to scrape instead of reading from sheet"
            },
            "response": []
        },
        {
            "name": "Start with Batch Size",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"sheetId\": \"{{sheet_id}}\",\n  \"batchSize\": 50\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/start-queue",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "start-queue"
                    ]
                },
                "description": "Limit number of rows to process (useful for large sheets with 1000s of rows)"
            },
            "response": []
        },
        {
            "name": "Bull Board - Queue Monitoring",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/admin/queues",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "admin",
                        "queues"
                    ]
                },
                "description": "Open Bull Board UI in browser to monitor queue status, view jobs, retry failed jobs, etc."
            },
            "response": []
        }
    ]
}